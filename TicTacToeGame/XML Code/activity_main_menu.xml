<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rb"
    tools:context="com.hfad.tictactoegame.MainMenu">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Main_Menu"
        android:id="@+id/first_line"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textSize="50dp"
        android:textColor="@color/red"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option1"
        android:id="@+id/hvcoption"
        android:layout_below="@+id/first_line"
        android:layout_marginTop="42dp"
        android:layout_alignLeft="@+id/first_line"
        android:layout_alignStart="@+id/first_line"
        android:layout_alignRight="@+id/first_line"
        android:layout_alignEnd="@+id/first_line"
        android:textSize="25sp"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:onClick="StartHumanVsComputer"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option2"
        android:id="@+id/hvhoption"
        android:layout_alignRight="@+id/info"
        android:layout_alignEnd="@+id/info"
        android:layout_alignLeft="@+id/first_line"
        android:layout_alignStart="@+id/first_line"
        android:textSize="25sp"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:onClick="StartHumanVsHuman"
        android:layout_below="@+id/hvcoption"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option3"
        android:id="@+id/info"
        android:layout_alignRight="@+id/first_line"
        android:layout_alignEnd="@+id/first_line"
        android:layout_alignLeft="@+id/hvcoption"
        android:layout_alignStart="@+id/hvcoption"
        android:textSize="25sp"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:onClick="TicTacToeInfo"
        android:layout_below="@+id/hvhoption" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/exit"
        android:id="@+id/ExitApp"
        android:layout_alignRight="@+id/info"
        android:layout_alignEnd="@+id/info"
        android:layout_alignLeft="@+id/info"
        android:layout_alignStart="@+id/info"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:onClick="ExitApp"
        />

</RelativeLayout>
