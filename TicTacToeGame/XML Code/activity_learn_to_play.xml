<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hfad.tictactoegame.LearnToPlay"
    android:background="@drawable/rb"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_to_play"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:id="@+id/inst"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
       />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/horix"

        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/verx"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/diagx"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/verwin"
        android:layout_toStartOf="@+id/verwin"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A horizontal victory looks like this"
        android:id="@+id/horizwin"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:background="@color/Yellow"

        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how"
        android:id="@+id/textView6"
        android:layout_marginBottom="26dp"
        android:textSize="25sp"
        android:textColor="@color/gold"
        android:background="@color/brown"
        android:layout_above="@+id/inst"

        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A vertical victory looks like this"
        android:id="@+id/verwin"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:textSize="19sp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A diagonal victory looks like this"
        android:id="@+id/diagwin"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/verwin"
        android:layout_alignStart="@+id/verwin"
        android:layout_marginLeft="5dp"
        android:textSize="19sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_info"
        android:id="@+id/button5"
        android:textColor="@color/blue"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/border_color_alt"

        android:onClick="onclickBackToInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/inst"
        android:layout_alignEnd="@+id/inst" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_to"
        android:id="@+id/textView3"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:textSize="20sp"
        android:layout_below="@+id/inst"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tie_option"
        android:id="@+id/tie_rule"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:padding="10dp"
        android:textColor="@color/blue"
        android:background="@color/Yellow"
        android:textSize="20sp"
        />


</RelativeLayout>





